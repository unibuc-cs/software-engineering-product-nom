<h2 class="text-center mt-5">Add Listing</h2>
<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "AddListing", controllerName: "Listing", method: FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
            {
                @Html.Label("Text", "Select seismic risk:")
                @Html.DropDownList("SeismicRisk", new List<SelectListItem>
            {
            new SelectListItem { Text = "None", Value = "0" },
            new SelectListItem { Text = "Low", Value = "1" },
            new SelectListItem { Text = "Medium", Value = "2" },
            new SelectListItem { Text = "High", Value = "3" }
            }, "Select one option", new { @class = "form-control" })

                <br />
                <br />

                @Html.Label("Text", "Total livable area:")
                <br />
                @Html.TextArea("TotalLivableArea", null, new { @class = "form-control" })
                <br />
                <br />

                @Html.Label("Text", "Details:")
                <br />
                @Html.TextArea("Details", null, new { @class = "form-control" })
                <br />
                <br />

                @Html.Label("File", "Upload Images:")
                <br />
                <input type="file" name="ImageRequest.ImageFiles" multiple class="form-control" />
                <br />
                <br />

                <button class="btn btn-success" type="submit">Add Listing</button>
            }

        </div>
    </div>
</div>